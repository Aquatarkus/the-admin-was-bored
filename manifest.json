{
    "name": "The Admin was Bored",
    "version": "0.1.2",
    "manifest_version": 2,
    "description": "Highlights weird and unexpected HTTP response headers. Doesn't track you.",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "images/icon.png"
    },
    "permissions": [
        "webRequest", // for inspecting response headers
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": [
            "scripts/jquery-1.8.0.min.js",
            "scripts/bored.js",
            "scripts/config.js",
            "scripts/background.js"
        ]
    },
    "options_page": "options.html"
}
